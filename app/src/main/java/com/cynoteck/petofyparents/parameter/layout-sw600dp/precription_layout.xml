<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:padding="10dp">
        <TextView
            android:id="@+id/parent_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textSize="20dp"
            android:textColor="@color/black_color"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/specilist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MBBS,MVC"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/email"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="aviral.rana@gmail.com"
                android:textColor="@color/black_color"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9999-788-855"
                android:gravity="right"
                android:textColor="@color/black_color"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_color"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/for_a"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="For A: Rustam"
                    android:textSize="22sp"
                    android:textColor="@color/black_color"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/age"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Age: Puppy"
                    android:textSize="22sp"
                    android:textColor="@color/black_color"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/sex"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sex: Male"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Date: 08/13/2020"
                    android:textSize="18sp"/>


            </LinearLayout>





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_color"
            android:layout_marginTop="8dp"/>


        <TextView
            android:id="@+id/prnt_nm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pet Parent Name: Pramad Rana (999-888-7894)"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black_color"/>

        <TextView
            android:id="@+id/temparature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Temparature(F): 98"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black_color"/>

        <TextView
            android:id="@+id/symptoms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Symptoms: Problem"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black_color"/>

        <TextView
            android:id="@+id/diagnosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diagnosis: Running"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black_color"/>

        <TextView
            android:id="@+id/remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Treatment Remarks: Drontal Plus"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black_color"/>

        <TextView
            android:id="@+id/nxt_visit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next Visit: 07/08/2020"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black_color"/>


    </LinearLayout>


    <LinearLayout
        android:textSize="25dp"
        android:layout_alignParentBottom="true"
        android:theme="@style/MatButton"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:textColor="@color/whiteColor"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:visibility="gone"
            android:id="@+id/crrete_pdf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".99"
            android:background="@color/colorPrimary"
            android:text="PDF"
            android:textSize="18sp"/>


        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/colorPrimary"
            android:text="CANCEL"
            android:textSize="18sp"/>


    </LinearLayout>



</RelativeLayout>