<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffff"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity">

    <TextView
        android:id="@+id/signUp_TV"
        android:padding="10dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/signUp_TV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="40dp"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:src="@drawable/login_resgister_logo"
        android:id="@+id/logoVet"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/divider_top"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/logoVet"
        android:background="@color/list_background"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/email_TV"
        android:padding="20dp"
        android:textColor="@color/black_color"
        android:textSize="20sp"
        android:text="@string/emailtext"
        app:layout_constraintTop_toBottomOf="@id/divider_top"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <EditText
        android:background="@android:color/transparent"
        android:id="@+id/email_TIET"
        android:hint="@string/email"
        app:layout_constraintBottom_toTopOf="@id/password_TV"
        app:layout_constraintTop_toTopOf="@id/email_TV"
        app:layout_constraintStart_toEndOf="@id/password_TV"
        app:layout_constraintBottom_toBottomOf="@id/email_TV"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:inputType="textEmailAddress"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />


    <View
        android:id="@+id/divider_middle"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/email_TV"
        android:background="@color/list_background"
        tools:ignore="MissingConstraints" />



    <TextView
        android:id="@+id/password_TV"
        android:padding="20dp"
        android:textColor="@color/black_color"
        android:textSize="20sp"
        android:text="@string/Register_password"
        app:layout_constraintTop_toBottomOf="@id/email_TV"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <EditText
        android:background="@android:color/transparent"
        android:id="@+id/password_TIET"
        android:hint="@string/password"
        app:layout_constraintEnd_toStartOf="@+id/forgetPass_TV"
        app:layout_constraintTop_toTopOf="@id/password_TV"
        app:layout_constraintStart_toEndOf="@id/password_TV"
        app:layout_constraintBottom_toBottomOf="@id/password_TV"
        android:layout_width="0dp"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/forgetPass_TV"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/password_TIET"
        app:layout_constraintBottom_toBottomOf="@id/password_TIET"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Forgot?"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        tools:ignore="MissingConstraints" />


    <View
        android:id="@+id/divider_bottom"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/password_TV"
        android:background="@color/list_background"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/login_BT"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorPrimary"
        android:textSize="25dp"
        android:theme="@style/MatButton"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:text="@string/submit"
        android:layout_width="0dp"
        android:textColor="@color/whiteColor"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>