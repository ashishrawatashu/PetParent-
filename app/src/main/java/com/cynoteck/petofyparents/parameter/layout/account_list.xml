<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="8dp"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black_color"
                        android:text="@string/name"
                        android:textStyle="bold"/>


                    <TextView
                        android:layout_weight="1.4"
                        android:gravity="start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/black_color"
                        android:text=":"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/name_TV"
                        android:layout_weight="0.7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/grayColorCode"
                        android:text="Ashish Rawat" />



                </LinearLayout>

                <LinearLayout
                    android:padding="8dp"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black_color"
                        android:text="@string/ifsc"
                        android:textStyle="bold"/>


                    <TextView
                        android:layout_weight="1.4"
                        android:gravity="start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/black_color"
                        android:text=":"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/ifsc_TV"
                        android:layout_weight="0.7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/grayColorCode"
                        android:text="@string/email"  />



                </LinearLayout>

                <LinearLayout
                    android:padding="8dp"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black_color"
                        android:text="@string/accountNumber"
                        android:textStyle="bold"/>


                    <TextView
                        android:layout_weight="1.4"
                        android:gravity="start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/black_color"
                        android:text=":"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/account_number_TV"
                        android:layout_weight="0.7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/grayColorCode"
                        android:text="@string/email"  />



                </LinearLayout>

                <LinearLayout
                    android:padding="8dp"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black_color"
                        android:text="@string/accountType"
                        android:textStyle="bold"/>


                    <TextView
                        android:layout_weight="1.4"
                        android:gravity="start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/black_color"
                        android:text=":"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/account_type_TV"
                        android:layout_weight="0.7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/grayColorCode" />



                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>




    </androidx.cardview.widget.CardView>






</LinearLayout>