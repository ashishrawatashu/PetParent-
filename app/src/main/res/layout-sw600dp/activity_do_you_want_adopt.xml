<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activty.DoYouWantAdoptActivity">

    <com.google.android.material.card.MaterialCardView
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/whiteColor"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/find_pet_for_adoption"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </com.google.android.material.card.MaterialCardView>


    <LinearLayout
        android:id="@+id/filter_restLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black_color"
            android:drawableLeft="@drawable/filter"/>

        <TextView
            android:id="@+id/rest_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black_color"
            android:drawableLeft="@drawable/refresh"
            android:layout_marginLeft="20dp"
            android:paddingLeft="5dp"/>


    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/filter_spinnerLL"
        app:layout_constraintTop_toBottomOf="@+id/filter_restLL"
        app:layout_constraintStart_toStartOf="@+id/filter_restLL"
        app:layout_constraintEnd_toEndOf="@+id/filter_restLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:scrollbars="none"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/petType"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@drawable/spinner_background"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/petGender"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@drawable/spinner_background"
                android:layout_marginLeft="5dp"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/petAge"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@drawable/spinner_background"
                android:layout_marginLeft="5dp"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/petSize"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@drawable/spinner_background"
                android:layout_marginLeft="5dp"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/petColor"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@drawable/spinner_background"
                android:layout_marginLeft="5dp"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/petBreed"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@drawable/spinner_background"
                android:layout_marginLeft="5dp"/>



        </LinearLayout>


    </HorizontalScrollView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedSV"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        app:layout_constraintTop_toBottomOf="@+id/filter_spinnerLL"
        app:layout_constraintStart_toStartOf="@+id/filter_spinnerLL"
        app:layout_constraintEnd_toEndOf="@+id/filter_spinnerLL"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/adoption_RV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                tools:listitem="@layout/adoption_list" />


            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>



    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>