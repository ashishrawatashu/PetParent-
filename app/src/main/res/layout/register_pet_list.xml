<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginRight="8dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/search_bar_background_grey"
    android:layout_height="50dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:id="@+id/pet_image_CIV"
        android:layout_marginLeft="10dp"
        android:layout_width="32dp"
        android:src="@drawable/empty_pet_image"
        android:layout_height="32dp"/>

    <TextView
        android:id="@+id/pet_name_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pet Name"
        android:fontFamily="@font/nunito"
        android:textSize="18sp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/pet_image_CIV"
        android:textColor="@color/gray_1"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"/>

    <RadioButton
        android:id="@+id/pet_select_RB"
        android:layout_toRightOf="@id/pet_name_TV"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>