<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activty.SendPhoneNumber">



    <ImageView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/qr_code_scanner"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/qrCodeScanner_IV"/>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/qrCodeScanner_IV">




      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <ImageView
              android:id="@+id/logIV"
              android:layout_width="0dp"
              android:layout_height="80dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              android:src="@drawable/logo_parents"/>


          <TextView
              android:text="Enter Your Phone Number"
              app:layout_constraintTop_toBottomOf="@+id/logIV"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              android:gravity="center"
              android:id="@+id/headlineTV"
              android:layout_width="0dp"
              android:layout_marginTop="20dp"
              android:layout_marginLeft="10dp"
              android:padding="10dp"
              android:textColor="@color/black_color"
              android:layout_height="50dp"
              android:textSize="20dp"
              android:textStyle="bold"/>


          <TextView
              android:text="We will text the OTP to your"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/headlineTV"
              android:gravity="center"
              android:id="@+id/headine2TV"
              android:layout_width="0dp"
              android:layout_marginTop="20dp"
              android:layout_marginLeft="10dp"
              android:textColor="#808080"
              android:layout_height="wrap_content"
              android:textSize="15sp" />

          <TextView
              android:text="phone number"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/headine2TV"
              android:gravity="center"
              android:id="@+id/headine3TV"
              android:layout_width="0dp"
              android:layout_marginLeft="10dp"
              android:textColor="#808080"
              android:layout_height="wrap_content"
              android:textSize="15sp" />

          <com.google.android.material.card.MaterialCardView
              android:layout_marginTop="30dp"
              android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
              android:layout_width="0dp"
              android:elevation="30dp"
              app:cardElevation="10dp"
              app:cardCornerRadius="50dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:layout_height="?attr/actionBarSize"
              android:background="@color/whiteColor"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/headine3TV"
              android:layout_marginBottom="20dp"
              app:layout_constraintEnd_toEndOf="parent">

              <EditText
                  android:id="@+id/enter_phone_ET"
                  android:hint="Enter Number"
                  android:paddingLeft="10dp"
                  android:paddingRight="10dp"
                  android:gravity="center"
                  android:inputType="number"
                  android:maxLength="10"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@null"/>

              <ImageView
                  android:layout_width="50dp"
                  android:layout_marginLeft="5dp"
                  android:padding="10dp"
                  android:layout_height="match_parent"
                  android:src="@drawable/ic_baseline_phone"/>


          </com.google.android.material.card.MaterialCardView>


      </androidx.constraintlayout.widget.ConstraintLayout>


  </ScrollView>




    <Button
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/request_code_BT"
        android:textSize="16sp"
        android:theme="@style/MatButton"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:text="Request Code"
        android:backgroundTint="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:textColor="@color/whiteColor"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>