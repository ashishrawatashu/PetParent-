<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.cardview.widget.CardView
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardCornerRadius="12dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                app:layout_goneMarginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/appointment_card_bg"/>

            <TextView
                android:id="@+id/heading_TV"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:text="Consultation Request taken"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:fontFamily="@font/nunito"
                android:textColor="@color/black_color"/>

            <TextView
                android:id="@+id/information_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Someone from our team will shortly confirm your appointment with Doctor Ajay bisht."
                app:layout_constraintTop_toBottomOf="@+id/heading_TV"
                android:gravity="center"
                android:textSize="12sp"
                android:fontFamily="@font/nunito"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textColor="@color/gray_3"/>
            
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/information_TV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/blue_large_check"/>

            <TextView
                android:id="@+id/back_to_appointments_TV"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:text="Back to appointments"
                android:textAllCaps="true"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/nunito"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>

</LinearLayout>