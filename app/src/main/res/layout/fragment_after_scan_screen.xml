<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor"
    tools:context=".fragments.AfterScanScreenFragment">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/whiteColor"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
        app:cardElevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/nunito"
            android:gravity="center"
            android:text="@string/petofyparent"
            android:textColor="#000"
            android:textSize="20sp" />

    </com.google.android.material.card.MaterialCardView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vet_info_CL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/vet_info_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">


        <androidx.cardview.widget.CardView
            android:id="@+id/doctor_image_CV"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="300dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/vet_profile_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/doctor_dummy_image" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/clinic_name_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/nunito"
            android:text="Govt.Veterinary Hospital"
            android:textColor="@color/black_color"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/doctor_image_CV"
            app:layout_constraintTop_toTopOf="@id/doctor_image_CV" />


        <LinearLayout
            android:id="@+id/start_rate_LL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            app:layout_constraintStart_toStartOf="@id/clinic_name_TV"
            app:layout_constraintTop_toBottomOf="@id/clinic_name_TV">

            <ImageView
                android:id="@+id/star_one"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/star_with_rate" />

            <ImageView
                android:id="@+id/star_two"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/star_with_rate" />

            <ImageView
                android:id="@+id/star_three"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/star_with_rate" />

            <ImageView
                android:id="@+id/star_four"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/star_with_rate" />

            <ImageView
                android:id="@+id/star_five"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/star_without_rate" />

        </LinearLayout>


        <TextView
            android:id="@+id/vet_name_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nunito"
            android:text="Dr D S Bisht"
            android:textColor="@color/black_color"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/doctor_image_CV"
            app:layout_constraintTop_toBottomOf="@+id/start_rate_LL" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <RelativeLayout
        android:id="@+id/search_boxRL"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_below="@id/toolbar"
        android:layout_centerVertical="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/home_search_bg"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/vet_info_CL"
        app:layout_constraintStart_toStartOf="@id/vet_info_CL"

        app:layout_constraintTop_toBottomOf="@id/vet_info_CL">

        <EditText
            android:id="@+id/search_box_add_new"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="Search patient, pet etc"
            android:imeOptions="actionSearch"
            android:inputType="textCapCharacters"
            android:paddingLeft="40dp"
            android:paddingRight="8dp"
            android:singleLine="true"
            android:textSize="11.09sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:src="@drawable/search_icon" />


        <ProgressBar
            android:id="@+id/progressBarForSearchBar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:layout_marginRight="10dp"
            android:indeterminateTint="@color/colorPrimary"
            android:padding="10dp"
            android:visibility="invisible" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/select_pet_headline_LL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="@id/vet_info_CL"
        app:layout_constraintStart_toStartOf="@id/vet_info_CL"
        app:layout_constraintTop_toBottomOf="@id/search_boxRL">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:fontFamily="@font/nunito"
            android:text="Select Pet To Add Visit"
            android:textColor="@color/black_color"
            android:textSize="18sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/add_pet_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/plus_logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/nunito"
                android:text="Add Pet"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/empty_IV"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="120dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="10dp"
        android:src="@drawable/empty"
        android:visibility="invisible"
        android:elevation="1dp"
        app:layout_constraintTop_toBottomOf="@+id/select_pet_headline_LL" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_pet_headline_LL">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/register_pet_RV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteColor"
                android:visibility="visible"
                tools:listitem="@layout/scan_list_layout" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>