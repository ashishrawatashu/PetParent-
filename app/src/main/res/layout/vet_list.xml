<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="7dp"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/whiteColor"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/vet_deatils_LL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/vetImage_LL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/vetImage_IV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/middle_LL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/vet_name_TV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aviral Rana"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold" />



                    <TextView
                        android:id="@+id/distance_TV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="479.32 Km away" />
                    <TextView
                        android:id="@+id/address_TV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dehradun" />


                    <TextView
                        android:visibility="gone"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Test,Veterinarian" />


                    <TextView
                        android:id="@+id/vet_officeName_TV"
                        android:textColor="@color/black_color"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aviral Care" />

                    <TextView
                        android:id="@+id/vet_email_TV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aviral.Rana@Gmail.Com" />


                </LinearLayout>

            </LinearLayout>



            <Button
                android:layout_gravity="end"
                android:id="@+id/book_appointment_BT"
                android:layout_width="150dp"
                android:layout_marginRight="20dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.5"
                android:textAllCaps="false"
                android:background="@color/colorPrimary"
                android:text="@string/bookAppointment"
                android:textColor="@color/whiteColor" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>
