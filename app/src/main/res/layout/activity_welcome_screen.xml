<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WelcomeScreenActivity">

    <ImageView
        android:id="@+id/logo_big_size_IV"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitStart"
        android:layout_marginTop="100dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="60dp"
        android:src="@drawable/petofy_main_logo"/>
    
    <ImageView
        android:id="@+id/pet_parent_with_pet_IV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitStart"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toTopOf="@+id/continue_BT"
        app:layout_constraintTop_toBottomOf="@id/logo_big_size_IV"
        app:layout_constraintStart_toStartOf="@id/logo_big_size_IV"
        app:layout_constraintEnd_toEndOf="@id/logo_big_size_IV"
        android:layout_marginBottom="20dp"
        android:src="@drawable/pet_parent_with_pet"/>


    <Button
        android:textAllCaps="false"
        android:id="@+id/continue_BT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/next_button_green_bg"
        android:textColor="@color/whiteColor"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:cornerRadius="30dp"
        android:layout_marginBottom="100dp"
        android:text="@string/ContinuewithPhoneNumber"/>






</androidx.constraintlayout.widget.ConstraintLayout>