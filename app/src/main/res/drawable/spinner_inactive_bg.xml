<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item><layer-list>
        <item><shape>
            <corners android:radius="6dp"/>
            <stroke
                android:width="2dp" android:color="#E0E0E0" />
            <solid android:color="@color/background_grey"/>

            <padding
                android:bottom="3dp"
                android:left="3dp"
                android:right="20dp" android:top="3dp" />
        </shape>
        </item>
        <item ><bitmap
            android:gravity="right|center"
            android:src="@drawable/down_arrow" />
        </item>
    </layer-list></item>
</selector>